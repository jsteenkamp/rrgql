{
  "name": "rrgql",
  "version": "0.1.0",
  "description": "React, Redux, GraphQL with Apollo Client",
  "author": "Johan Steenkamp",
  "scripts": {
    "prebuild": "yarn lint",
    "build": "cross-env NODE_ENV=production webpack --config webpack/webpack.prod.babel.js -p",
    "build:analyze": "yarn prebuild && cross-env NODE_ENV=production webpack --config webpack/webpack.prod.babel.js --env.analyze -p",
    "build:bcrypt": "npm rebuild bcrypt --build-from-source --scripts-prepend-node-path=true",
    "dev": "cross-env NODE_ENV=development NODE_CONFIG_DIR=dist/config node --require babel-register server.webpack.js --env.assets",
    "lint": "eslint src --quiet",
    "lint:warn": "eslint src",
    "lint:server": "eslint dist/server.js dist/server",
    "lint:public": "eslint -c dist/public/.eslintrc --ignore-path dist/public/.eslintignore dist/public",
    "lint:css": "stylelint './src/**/*.js'",
    "intl": "node --require babel-register _assets/intl",
    "start": "cross-env NODE_ENV=production NODE_CONFIG_DIR=dist/config node --require babel-register dist/server.js",
    "flow": "flow",
    "deploy": "now dist && now alias $(pbpaste) rrgql.jsx.nz"
  },
  "engines": {
    "node": "^8.9.4"
  },
  "keywords": [
    "react",
    "redux",
    "webpack",
    "graphql",
    "apollo",
    "styled-components"
  ],
  "license": "SEE LICENSE IN license.txt",
  "babel": {
    "compact": true,
    "env": {
      "development": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "browsers": [
                  "last 2 versions",
                  "not ie > 0"
                ],
                "node": "current"
              },
              "debug": false
            }
          ],
          "flow",
          "react",
          "react-hmre",
          "stage-2"
        ],
        "plugins": [
          "babel-plugin-styled-components",
          "react-hot-loader/babel",
          "transform-flow-strip-types",
          "transform-inline-environment-variables",
          "transform-react-jsx-source",
          "transform-runtime",
          [
            "react-intl",
            {
              "messagesDir": "./_assets/messages/",
              "enforceDescriptions": false
            }
          ]
        ]
      },
      "production": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "browsers": [
                  "last 2 versions",
                  "not ie > 0"
                ]
              }
            }
          ],
          "react",
          "stage-2"
        ],
        "plugins": [
          "transform-inline-environment-variables",
          "transform-react-constant-elements",
          "transform-react-inline-elements"
        ]
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:react/recommended"
    ],
    "globals": {
      "onmessage": false,
      "close": false,
      "aui": false,
      "APP_VERSION": false
    },
    "rules": {
      "array-callback-return": 0,
      "import/no-webpack-loader-syntax": 0,
      "no-case-declarations": 0,
      "no-constant-condition": "warn",
      "no-console": [
        "error",
        {
          "allow": [
            "info",
            "warn",
            "error"
          ]
        }
      ],
      "no-global-assign": [
        "warn",
        {
          "exceptions": [
            "onmessage",
            "close"
          ]
        }
      ],
      "no-extra-semi": "warn",
      "no-unused-vars": "warn",
      "semi": "error",
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "never",
          "named": "never",
          "asyncArrow": "always"
        }
      ],
      "react/display-name": "warn",
      "react/jsx-key": "warn",
      "react/jsx-no-bind": [
        "warn",
        {
          "ignoreRefs": false,
          "allowArrowFunctions": false,
          "allowBind": false
        }
      ],
      "react/no-deprecated": "warn",
      "react/no-unescaped-entities": "warn",
      "react/no-find-dom-node": "warn",
      "react/no-string-refs": "warn",
      "react/prop-types": "warn"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "bracketSpacing": false,
    "jsxBracketSameLine": true
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.17.2",
    "compression": "^1.7.0",
    "config": "^1.26.2",
    "express": "^4.15.4",
    "express-jwt": "^5.3.0",
    "fs": "^0.0.1-security",
    "graphql": "^0.12.3",
    "graphql-server-express": "^1.3.2",
    "graphql-tag": "^2.6.1",
    "graphql-tools": "^2.18.0",
    "interactive": "^0.1.9",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^7.4.3",
    "lodash": "^4.17.4",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "apollo-client-preset": "^1.0.6",
    "apollo-link-state": "^0.3.1",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-react-intl": "^2.3.1",
    "babel-plugin-styled-components": "^1.2.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-inline-environment-variables": "^0.2.0",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-plugin-transform-react-inline-elements": "^6.22.0",
    "babel-plugin-transform-react-jsx-source": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-template": "^6.26.0",
    "bowser": "^1.7.2",
    "comma-separated-values": "^3.6.4",
    "copy-pkg-json-webpack-plugin": "^0.0.29",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.5",
    "custom-event-polyfill": "^0.3.0",
    "d3": "^4.10.2",
    "dom-helpers": "^3.2.1",
    "dygraphs": "^2.0.0",
    "eslint": "^4.5.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-react": "^7.3.0",
    "exports-loader": "^0.6.4",
    "expose-loader": "^0.7.3",
    "file-loader": "^1.0.0",
    "file-saver": "^1.3.3",
    "flow-bin": "^0.53.1",
    "glob": "^7.1.2",
    "html-webpack-plugin": "^2.30.1",
    "immutability-helper": "^2.3.1",
    "mkdirp": "^0.5.1",
    "polished": "^1.6.1",
    "prettier": "^1.6.1",
    "promise": "^8.0.1",
    "prop-types": "^15.5.10",
    "raw-loader": "^0.5.1",
    "react": "^16.0.0",
    "react-apollo": "^2.0.4",
    "react-dom": "^16.0.0",
    "react-draggable": "^3.0.2",
    "react-hot-loader": "^3.1.1",
    "react-inspector": "^2.1.4",
    "react-intl": "^2.3.0",
    "react-measure": "^2.0.2",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-transform-hmr": "^1.0.4",
    "react-virtualized": "^9.10.1",
    "recompose": "^0.25.0",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.15.6",
    "reselect": "^3.0.0",
    "rimraf": "^2.6.1",
    "shx": "^0.2.2",
    "style-loader": "^0.18.2",
    "styled-components": "^2.2.1",
    "styled-system": "^1.0.8",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.0.0",
    "svg-sprite-loader": "^3.2.4",
    "url-loader": "^0.5.9",
    "webpack": "^3.5.5",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.18.2",
    "webpack-shell-plugin": "^0.5.0",
    "whatwg-fetch": "^2.0.3",
    "worker-loader": "^0.8.1"
  },
  "repository": "https://github.com/jsteenkamp/rrgql"
}
